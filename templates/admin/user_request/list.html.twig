{% extends 'admin/layout.html.twig' %}

{% block title %}
    Requetes Utilisateurs |
    {{ parent() }} 
{% endblock %}

{% block body %}
    <section class="text-center container">
		<div class="row">
			<div class="col-lg-6 col-md-8 mx-auto mb-4">
				<h1 class="fw-light">
					Requetes des utilisateurs
				</h1>
			</div>
		</div>
	</section>

	<div class="container">
        {% for request in requests %}
            <div class="card text-center border border-dark">
                <div class="card-header">
                        <div class="text-start">
                            {{ request.firstname }} - {{ request.email }}
                        </div>
                        <div class="text-end">{% if request.status == 1 %}
                        <a href="{{ path('admin_request_status_change', {id:request.id}) }}">
                        <button type="button" class="btn btn-outline-success col-2">En attente</button>
                        </a>
                        {% else %}
                        <a href="{{ path('admin_request_status_change', {id:request.id}) }}">
                        <button type="button" class="btn btn-danger col-2">Valider</button>
                        </a>
                        {% endif %}</div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ request.subject }}</h5>
                    <hr class="mt-3" style="margin-bottom: 2em">
                    <p class="card-text">{{ request.message }}</p>
                    <a href="{{ path('admin_request_delete', {id:request.id, token:csrf_token('delete-request')}) }}" class="btn btn-outline-secondary" style="margin-left: 70em">Supprimer</a>
                </div>
            </div>
            <div class="my-5"></div>
        {% endfor %}
	</div>
{% endblock %}
